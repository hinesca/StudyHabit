<UserControl x:Class="StudyHabit.View.CourseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudyHabit"
             mc:Ignorable="d"
             d:DesignHeight="350" Width="175">
     <UserControl.Resources>
          <local:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
     </UserControl.Resources>
     <DockPanel>
          <Button
               Command="{Binding AddClassCommand}"
               DockPanel.Dock="Top"
               Width="70"
               Content="Add Class"
               HorizontalAlignment="Right"/>
          <ListView
               x:Name="CourseLV"
               DataContext="{Binding CourseList}"
               DockPanel.Dock="Top"
               HorizontalAlignment="Stretch"
               Padding="5">
               <DataTemplate>
                    <StackPanel
                        Height="{Binding ActualHeight, ElementName=CourseLV}"
                        Width="30"
                        Background="LightSteelBlue">
                         <TextBlock Text="{Binding Name}"/>
                         <TextBlock Text="{Binding Number}"/>
                         <TextBlock Text="{Binding Term}"/>
                    </StackPanel>
               </DataTemplate>
          </ListView>
          <TextBlock Text="{Binding SelectedCourseName}"/>
          <StackPanel Orientation="Horizontal">
               <ListView>

               </ListView>
               <StackPanel>
                    <TextBlock Text="To Do" FontWeight="Bold"/>
                    <ListView>

                    </ListView>
               </StackPanel>
          </StackPanel>
     </DockPanel>
</UserControl>
